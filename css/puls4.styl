gris_oscuro = #444
azul = #22BCE0
naranja = #DD4F24
gris_texto = #7a7a7a

@font-face {
	font-family: 'iconitos';
	src:url('../fonts/icomoon.eot?jyqli3');
	src:url('../fonts/icomoon.eot?#iefixjyqli3') format('embedded-opentype'),
		url('../fonts/icomoon.woff?jyqli3') format('woff'),
		url('../fonts/icomoon.ttf?jyqli3') format('truetype'),
		url('../fonts/icomoon.svg?jyqli3#icomoon') format('svg');
	font-weight: normal;
	font-style: normal;
}
a
	color naranja

body 
	background #E8E8E8
	color gris_oscuro
	font-family Arial
	font-size 16px
	
footer
	background naranja
	color rgba(white,0.5)
	text-align center
	width 100%
	padding 1em 0
	
	
	h3
		font-size 14px
		font-weigh normal
		
		strong
			display block
		.mejor
			&:before
			&:after
				content"-"
header
	background gris_oscuro
	box-shadow 0 5px rgba(0,0,0,0.2)
	color white
	overflow hidden
	padding 0.5em
	position relative
	z-index 1
	
	
	.logo
		border-right 1px solid azul	 
		float left	
		width 60px
			
		img				
			width 52px			

				
	.titular
		margin 0px 60px 0 80px
		.titulo
			font-size 18px
			font-weigh normal
			margin 0
			padding 0
			
		.filtro
			color azul
			text-decoration none
			font-size 14px
			font-weight bold
			font-style italic
			
		.publicar
			background naranja
			color white
			margin -5px 2.5em 0 0
			padding 0.2em 0.2em
			text-decoration none
			font-style italic
			text-shadow 1px 1px 0px black 
			float right
			
			&:before
				display inline-block
				content "\e908"
				font-family "iconitos"
				margin 0 3px 0 0
				
			
				
			
	.usuario
		position absolute
		top 10px
		right 10px		
			
		.avatar
			top -15px
			position relative
			z-index 2  
			
			img 
				width 50px
				border-radius 50%
							

		.flechita
			text-decoration none
			background naranja
			color white
			display block
			padding 1px
			text-align right
			position absolute
			top 18%
			left 73px
			width 2em
			
			&:after
				font-family "iconitos"
				content: "\e600"
				text-shadow 1px 1px 0 black
				
				 
			

nav 
	background azul
	border-left 15px solid white
	position relative
	
	&:before
		border-bottom 20px solid transparent
		border-left 7px solid white
		border-top 20px solid transparent
		content ""
		position absolute
		left 0
		top 0
	
	.menu
		height 40px
		line-height 40px
		margin 0
		padding 0
		overflow-x auto
		white-space nowrap
		
		li
			display inline-block
			
			a
				color white
				display block
				margin 0 0.5em
				padding 0 0em
				text-decoration none
				
.posts
	padding 0.5em
		
	.post		 
		color gris_texto
		box-shadow 2px 2px 10px rgba(black,0.5)
		overflow hidden
		border-radius 0 0 0.5em 0.5em
		margin-bottom 1em
		
		
		.acciones
			border-top 3px solid azul
			padding 0.5em	
			
			
			.datos
				float right
				
				.comentarios
					background gris_oscuro
					color white
					padding 2px 5px
					margin 0 1em 0 0
					text-decoration none
					border-radius 5px
					 
				.estrellita
					text-decoration none
					&:before
						font-family "iconitos"
						content: "\e9d9"
						color EOD561
						
						
						
						
				
			.votos
				float left
				
				.down 
				.up
					text-decoration none
				
				.down
					color red
					&:before
						font-family "iconitos"
						content: "\e600"
						font-size 1.5em
						vertical-align bottom
				.up
					color green
					&:before
						font-family "iconitos"
						content: "\e601"
						font-size 1.5em
						vertical-align bottom
			
		.descripcion
			color gris_texto
			
			.detalles
				height 160px
				margin-left 130px	
				
				.autor	
					margin 0.5em 0 2em 0
					
				.fecha
					float right
					margin 0 1em 0 0
					
					
				.tag
					background azul
					color white
					text-decoration none
					padding 0.2em 0.5em
					border-radius 0.5em		
								
				.titulo
					color gris_oscuro
					font-size 18px
					font-style italic
					margin 0
					padding 0.5em 0.5em 0 0
			
			
			.imagen
				
				float left
				margin 0
				
				img
					width 120px
					height 160px
					vertical-align top

@media screen and (min-width 768px)

	header
		.titular
			.publicar
				position relative
				padding-left 3em
				
				&:before
					left 0
					top -10px
					font-size 2.5em
					position absolute
					

	.posts		
		.post
			display inline-block
			width 48%
			vertical-align top
			
			&:nth-child(odd)
				margin-right 2%